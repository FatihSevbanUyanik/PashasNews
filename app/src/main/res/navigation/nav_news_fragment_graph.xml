<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_news_fragment_grpah"
    app:startDestination="@id/topHeadlinesFragment">
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.example.pashanews.ui.fragment.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/topHeadlinesFragment"
        android:name="com.example.pashanews.ui.fragment.HeadLinesFragment"
        android:label="fragment_head_news"
        tools:layout="@layout/fragment_head_lines" >
        <action
            android:id="@+id/action_topHeadlinesFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteNewsFragment"
        android:name="com.example.pashanews.ui.fragment.FavouriteNewsFragment"
        android:label="fragment_favourite_news"
        tools:layout="@layout/fragment_favourite_news" >
        <action
            android:id="@+id/action_favouriteNewsFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>
    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.pashanews.ui.fragment.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article" >
        <argument
            android:name="article"
            app:argType="com.example.pashasnews.model.Article" />
    </fragment>
</navigation>